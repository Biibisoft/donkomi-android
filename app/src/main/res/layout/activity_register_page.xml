<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">
  <include  layout="@layout/universal_toolbar" />

  <LinearLayout
      android:layout_marginTop="90dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="15dp">

    <TextView
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Setup Your Personal Profile On Donkomi"
        android:textColor="@color/app_blue" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_rectangle"
        android:hint="Email"
        android:padding="13dp"
        android:textColorHint="@color/app_blue"
        android:textSize="15sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/stroke_rectangle" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/stroke_rectangle"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="13dp"
        android:textColorHint="@color/app_blue"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/passwords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/stroke_rectangle"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="13dp"
        android:textColorHint="@color/app_blue"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/confirm_passwords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/stroke_rectangle"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="13dp"
        android:textColorHint="@color/app_blue"
        android:textSize="15sp" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_blue"
        android:text="FINISH"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/solid_rectangle"
        android:backgroundTint="@color/app_red"
        android:text="USE GOOGLE"
        android:textColor="@color/white" />


  </LinearLayout>

</RelativeLayout>

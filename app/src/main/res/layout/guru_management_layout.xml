<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

  <LinearLayout
      android:id="@+id/top_items"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="7dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Create vendors for you shop, or create items that your vendors sell" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:background="@color/white"
          android:orientation="horizontal">

        <androidx.cardview.widget.CardView

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp">

          <RelativeLayout
              android:id="@+id/create_new_vendor_btn"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:clickable="true">

            <ImageView
                android:id="@+id/plus_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/add_icon"
                app:tint="@color/app_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus_1"
                android:layout_centerHorizontal="true"
                android:text="Vendor"
                android:textColor="@color/black"
                android:textSize="12sp" />
          </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp">

          <RelativeLayout
              android:id="@+id/create_new_stock_btn"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:clickable="true">

            <ImageView
                android:id="@+id/plus_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/add_icon"
                app:tint="@color/app_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus_2"
                android:layout_centerHorizontal="true"
                android:text="Stock"
                android:textColor="@color/black"
                android:textSize="12sp" />
          </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"

            app:cardCornerRadius="6dp"
            app:cardElevation="10dp">

          <RelativeLayout
              android:id="@+id/create_new_routine_btn"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:clickable="true">

            <ImageView
                android:id="@+id/plus_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/add_icon"
                app:tint="@color/app_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plus_3"
                android:layout_centerHorizontal="true"
                android:text="Routine"
                android:textColor="@color/black"
                android:textSize="12sp" />
          </RelativeLayout>
        </androidx.cardview.widget.CardView>


      </LinearLayout>
    </RelativeLayout>

    <!-- ********************************** TABBED AREA **************************************  -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:orientation="horizontal"
          android:paddingLeft="20dp"
          android:paddingRight="20dp">

        <TextView
            android:id="@+id/vendors_tab_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bottom_border_line"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="Vendors"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/stocks_tab_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/plain_ripple_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="Stock"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/routines_tab_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/plain_ripple_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="Routine"
            android:textColor="@color/black" />
      </LinearLayout>
    </RelativeLayout>
  </LinearLayout>

  <!--   TABBED BODY SWAPPING AREA  -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/top_items">

    <include layout="@layout/routines_tab_fragment" />

    <include layout="@layout/stocks_tab_fragment" />

    <include layout="@layout/vendors_tab_fragment" />

  </LinearLayout>

</RelativeLayout>
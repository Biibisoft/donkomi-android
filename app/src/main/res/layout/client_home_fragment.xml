<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/live_trips_recycler"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone" />

  <include layout="@layout/raw_loader" />

  <TextView
      android:id="@+id/information"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sorry, could not content for you "
      android:textAlignment="center"
      android:textSize="18sp"
      android:visibility="gone" />

  <RelativeLayout
      android:visibility="visible"
      android:id="@+id/not_found"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/not_found_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_data_image" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/not_found_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_routines_found" />
  </RelativeLayout>

</LinearLayout>
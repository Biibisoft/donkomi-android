<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

  <ImageView
      android:id="@+id/product_icon"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_centerVertical="true"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
      android:src="@drawable/burger" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/product_icon"
      android:text="Three Layered Burger"
      android:textSize="18sp" />

  <ImageView
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="25dp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:clickable="true"
      android:focusable="true"
      android:src="@drawable/add_to_cart_icon"
      app:tint="@color/app_green" />

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_alignParentBottom="true"
      android:background="@drawable/stroke_rectangle"
      android:backgroundTint="@color/grey_shade_1" />
</RelativeLayout>
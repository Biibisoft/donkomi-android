<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteOrderPage">

  <include
      layout="@layout/universal_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true" />

  <TextView
      android:id="@+id/text_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/title_bar"
      android:padding="10dp"
      android:text="Complete your orders from the shops you ordered from" />

  <Spinner
      android:id="@+id/shops_spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/text_desc"
      android:layout_margin="10dp"
      android:background="@drawable/stroke_rectangle" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/order_items_recycler"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/shops_spinner" />


</RelativeLayout>
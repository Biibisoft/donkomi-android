<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/product_icon"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
      android:src="@drawable/burger" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@id/product_icon"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Fries"
        android:textSize="18sp" />

    <TextView
        android:textFontWeight="700"
        android:textSize="17sp"
        android:textColor="@color/app_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 55"
        />

  </LinearLayout>

  <ImageView
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="35dp"
      android:src="@drawable/edit_icon"
      app:tint="@color/app_green" />

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_below="@id/product_icon"
      android:background="@drawable/stroke_rectangle"
      android:backgroundTint="@color/grey_shade_1" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

  </LinearLayout>

</RelativeLayout>
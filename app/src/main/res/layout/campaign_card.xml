<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="TRIP TO GRAND BAIE"
            android:textColor="@color/app_blue"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="Shops to order from"
            android:textColor="@color/grey_shade_3"
            android:textSize="13sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="LA CROISETTE SUPER U JUMBO"
            android:textColor="@color/app_blue"


            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="You can order the following"
            android:textColor="@color/grey_shade_3"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:text="GROCERIES FOOD CHIPS"
            android:textColor="@color/app_blue"
            android:textSize="11sp" />

      </LinearLayout>

      <TextView
          android:id="@+id/price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:fontFamily="@font/futura"
          android:text="+Rs 50"
          android:textColor="@color/app_red"
          android:textFontWeight="700"
          android:textSize="30sp" />

      <TextView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/price"
          android:layout_alignParentRight="true"
          android:text="/order"
          android:textColor="@color/app_green"
          android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="10dp"
          android:src="@drawable/bus_icon"
          app:tint="@color/app_blue" />

      <TextView
          android:id="@+id/timing_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/timing"
          android:layout_alignParentRight="true"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/futura"
          android:text="LEAVING IN"
          android:textColor="@color/app_green"

          android:textSize="12sp" />

      <TextView
          android:id="@+id/timing"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:fontFamily="@font/futura"
          android:text="2hrs: 30 mins"
          android:textColor="@color/app_green"
          android:textFontWeight="700"
          android:textSize="28dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/app_blue"
        android:padding="10dp">

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
          app:tint="@color/white" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:text="PLACE ORDER"
          android:textColor="@color/white"
          android:textFontWeight="700" />
    </RelativeLayout>
  </LinearLayout>

</LinearLayout>
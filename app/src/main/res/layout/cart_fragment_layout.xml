<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView

      android:layout_marginLeft="15dp"
      android:id="@+id/text_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/title_bar"
      android:padding="10dp"
      android:text="Complete your orders from the shops you ordered from" />

  <Spinner
      android:id="@+id/shops_spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/text_desc"
      android:layout_marginBottom="10dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd ="15dp"
      android:background="@drawable/stroke_rectangle" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/order_items_recycler"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/shops_spinner" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout
      android:id="@+id/create_new_stock_form"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/title_bar"
      android:visibility="gone">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter information about the new vendor"
            android:textColor="@color/app_blue" />

        <ImageView
            android:id="@+id/stock_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Image of vendor"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mcdonalds_building" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:text="Tap to change image"
              android:textColor="@color/grey_shade_2"
              android:textSize="12sp" />

          <TextView
              android:layout_marginRight="20dp"
              android:clickable="true"
              android:visibility="gone"
              android:id="@+id/remove_stock_image"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:background="?attr/selectableItemBackgroundBorderless"
              android:text="Remove Image"
              android:textColor="@color/app_red"
              android:textSize="12sp"
              android:focusable="true" />
        </RelativeLayout>

        <EditText
            android:id="@+id/stock_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke_rectangle"
            android:drawableTint="@color/app_red"
            android:hint="Stock name ( Eg. McDonalds )"
            android:padding="15dp"
            android:textColorHint="@color/app_blue"
            android:textSize="14sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Which vendor does this stock belong to?"
            android:textColor="@color/app_blue"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/owner_of_stock_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="15dp"
            android:background="@drawable/stroke_rectangle" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/stock_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke_rectangle"
            android:drawableTint="@color/app_red"
            android:hint="Price ( Eg. Rs 120.9 )"
            android:padding="15dp"
            android:textColorHint="@color/app_blue"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/stock_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke_rectangle"
            android:drawableTint="@color/app_red"
            android:gravity="top|left"
            android:hint="Describe this item... (Optional)"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:padding="15dp"
            android:textColorHint="@color/app_blue"
            android:textSize="14sp" />


      </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/create_new_stock_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_solid_rectangle"
        android:backgroundTint="@color/app_green"
        android:text="DONE, ADD STOCK"
        android:textColor="@color/white" />
  </RelativeLayout>

</merge>